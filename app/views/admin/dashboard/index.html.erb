<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- ✅ Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

    <%= csrf_meta_tags %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <!-- ✅ Barre de navigation top -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100">
      <div class="container-fluid">

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="#">
          <img src="/logo.png" alt="Logo" style="height: 30px;" class="me-2">
          Dashboard
        </a>

        <!-- Burger (responsive) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menu global -->
        <div class="collapse navbar-collapse" id="navbarContent">

          <!-- MENU "Show" aligné à gauche -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="showDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Show
              </a>
              <ul class="dropdown-menu" aria-labelledby="showDropdown">
                <li><%= link_to "Importer depuis Equipe", import_equipe_path, class: "dropdown-item" %></li>
                <li><%= link_to "Importer depuis Hippodata", import_hippo_path, class: "dropdown-item" %></li>
              </ul>
            </li>
          </ul>

          <!-- MENU à droite -->
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Accueil", admin_dashboard_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Créer un utilisateur", new_user_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Déconnexion", logout_path, method: :delete, data: { turbo: false }, class: "nav-link" %>
            </li>
          </ul>

        </div>
      </div>
    </nav>


    <!-- ✅ Contenu principal -->
    <main class="container mt-5">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <!-- ✅ Script pour auto-fermer les alertes après 3 secondes -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setTimeout(function () {
                document.querySelectorAll('.alert').forEach(function (el) {
                    // Ajoute la classe Bootstrap fade out
                    el.classList.remove('show');
                    el.classList.add('fade');
                    // Puis supprime complètement du DOM après animation (300ms)
                    setTimeout(() => el.remove(), 300);
                });
            }, 3000); // 3 secondes
        });
    </script>
  </body>
</html>
