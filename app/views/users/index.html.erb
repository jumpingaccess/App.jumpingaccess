<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Utilisateurs</h2>
    <%= link_to "Créer un utilisateur", new_user_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>Rôle</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role.titleize %></td>
          <td>
            <%= link_to "Modifier", edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
